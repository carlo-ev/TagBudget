<!DOCTYPE html>
<html>
<head>
  <title>TagBudget</title>
	
	<!-- JQUERY -->
	<script src="//ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
	<%= javascript_include_tag 'metro' %>
	  
	<!-- METRO UI CSS -->
	<%= stylesheet_link_tag 'metro-boostrap.css'%>
	<%= stylesheet_link_tag 'metro-boostrap-responsive.css'%>
	
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body class="metro grid fluid">
	<div class="row">
		<div class="span10 offset1">
			<nav class="horizontal-menu">
				<ul>
					<li><a href="<%= root_path %>"><h1>TagBudget</h1></a></li>
					<% if @curent_user%>
					<li><a href="/show">Tag</a></li>
					<li><a href="/week">This Week</a></li>
					<li><a href="/history">History</a></li>
					<% else %>
					<li><a href='/login'>Login</a></li>
					<li><a href='/signup'>SignUp</a></li>
					<% end %>
				</ul>
			</nav>
		</div>
	</div>
	<%= yield %>

</body>
</html>
