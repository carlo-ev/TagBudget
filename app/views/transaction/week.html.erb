<div class="grid">
	<div class="row">
		<div class="span12 offset2">
			<p class="subheader text-center">Week Transactions<p>
		</div>
	</div>
		<% @days.each_with_index do |day_transaction, index| %>
		<div class="row">
			<div class="tile-group eight ntp text-center offset1">
				<h3 class="tile-area-title"><%= day_transaction[0] %></h3>
				<% if day_transaction[1].size > 0 then %>
					<%= render partial: "transaction" , collection: day_transaction[1].slice(0..2) %>	
					<% if day_transaction[1].size > 3 then%>
						<a href="/history?begin=<%= day_transaction[1][0].created_at.to_date%>" class="item-title-secondary">
							<p class="text-right fg-hover-orange"><em>View All...</em></p>
						</a>
					<% end %>
				<% else %>
					<div class="tile ol-steel bg-gray">
						<div class="tile-content">
							<div class="padding20">
								<p class="text-center fg-white">
									Sorry No Transactions For This Day
								</p>
							</div>
						</div>
					</div>
				<% end %>
			</div>
		</div>
		<% end %>
</div>