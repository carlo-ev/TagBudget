<div class="grid fluid">
	<div class="row">
		<div class="span5 offset1">
			<h2>	Week Transactions</h2>
		</div>
		<%= render 'shared/sidebar' %>
	</div>
	<div class="row">
		<div class="span9 offset1">
			<div class="tab-control" data-role="tab-control">
				<% @days[0].each_with_index do |day, index| %>
					<ul class="tabs">
						<li><a href="#_page_<%= index + 1 %>"><%= day%></a></li>
					</ul>
				<% end %>
			</div>
			<div class="frames">
				<% @days[1].each_with_index do |trans, index| %>
					<div class="frame" id="_page_<%= index+1 %>">
						<div class="tile-group eight">
							<% render partial: "transaction", collection: trans %>
						</div>
					</div>
				<% end %>
			</div>
		</div>
	</div>	
</div>